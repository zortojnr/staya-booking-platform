{
  "name": "staya-booking-platform",
  "version": "1.0.0",
  "description": "Modern hotel and travel booking platform for Taraba State",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
